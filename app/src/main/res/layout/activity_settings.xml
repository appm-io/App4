<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:padding="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.creative_on.app4.SettingsActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/settings_activity_title"
        android:layout_gravity="top"
        android:padding="15dp"
        android:textColor="#000"
        android:textAlignment="center"
        android:textSize="17dp"
        android:background="#ffa500"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:hint="@string/settings_info"
            android:textColor="#000"
            android:background="#00ff00"
            android:textSize="15dp"
            android:padding="30dp"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#87CEFA"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="top|center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/settings_refresh"
            android:textSize="25dp"
            android:textIsSelectable="false"
            android:textColor="#ffffff"
            android:layout_marginBottom="5dp" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"
            android:padding="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="left|bottom"
            android:hint="Minim range" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText1"
            android:padding="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="top|right"
            android:hint="Maximum range" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#ffff3c42"
        android:layout_margin="4dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="top|center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/alert_interval"
            android:textSize="25dp"
            android:textIsSelectable="false"
            android:textColor="#ffffff"
            android:layout_marginBottom="30dp" />
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:padding="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="left|bottom"
            android:hint="Minim range"/>
        <EditText
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:padding="5dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_gravity="top|right"
            android:hint="Maximum range"/>
    </LinearLayout>
</LinearLayout>


