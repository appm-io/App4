<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.creative_on.app4.Stats"
    android:background="#ff000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="#ff000000"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#fff08118"
            android:layout_margin="4dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CPU"
                android:id="@+id/cpu"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/cpu_value"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#ffff3c42"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RAM"
                android:id="@+id/ram"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/ram_value"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="#ff000000"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#ff62ff20"
            android:layout_margin="4dp">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="bottom|center"
                android:layout_weight="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Average Load"
                android:id="@+id/averageLoad"
                android:layout_gravity="center_horizontal"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="..."
                        android:id="@+id/averageLoad_value_min"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="35dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="top|center"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="..."
                        android:id="@+id/averageLoad_value"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textSize="40dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="..."
                        android:id="@+id/averageLoad_value_max"
                        android:layout_gravity="center_horizontal"
                        android:textSize="35dp"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:background="#ff000000"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#f0f00f"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Network"
                android:id="@+id/network"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/network_value"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#ff0fff"
            android:layout_margin="4dp">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Disk Usage"
                android:id="@+id/disk_usage"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top|center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/disk_usage_value"
                android:textSize="40dp"
                android:textIsSelectable="false"
                android:textColor="#ffffff" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
